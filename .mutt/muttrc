set timeout=15
set mail_check=60

# source config parts
source ~/.mutt/gpg
source ~/.mutt/dracula

# interface
set sort=threads
set sort_aux=reverse-last-date-received
set envelope_from=yes
set edit_hdrs

unset allow_8bit
set date_format="%a, %d. %b %H:%M"
set index_format="%4C %Z %D %-22.22F (%?l?%4l&%4c?) %s"
set folder_format="%2C %8s %d %t %N %f"
set pager_index_lines=10
set editor="nvim +8"
set move=no
set beep_new
unset markers

# html mails
alternative_order text/plain text text/html
auto_view text/html

# attachments
set mailcap_path="~/.mutt/mailcap"
bind attach <return> view-mailcap

# gmail
set folder=~/.mail/gmail
set spoolfile=+INBOX
set record=/dev/null
set postponed="+drafts"
set trash="+trash"
set from="Marvin Preuss <marvin@xsteadfastx.org>"
set hostname=xsteadfastx.org
set smtp_url="smtp://xsteadfastx@gmail.com@smtp.gmail.com:587/"
set smtp_authenticators='gssapi:login'

# auth
set imap_user="xsteadfastx@gmail.com"
set imap_pass=`gopass show -o misc/mutt-gmail`
set smtp_pass=`gopass show -o misc/mutt-gmail`

# mailboxes
mailboxes ~/.mail/gmail/INBOX
mailboxes ~/.mail/gmail/alpine-lists

# keybindings
bind editor <space> noop
macro index,pager y "<save-message>=all<enter><enter>" "Archive"
macro index,pager d "<save-message>=trash<enter><enter>" "Trash"
macro index,pager D "<save-message>=trash<enter><enter>" "Trash"
macro index gi "<change-folder>=INBOX<enter>" "Go to inbox"
macro index ga "<change-folder>=all<enter>" "Go to all mail"
macro index gs "<change-folder>=starred<enter>" "Go to starred messages"
macro index gd "<change-folder>=drafts<enter>" "Go to drafts"
