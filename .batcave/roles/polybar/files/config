[module/weather]
type = custom/script
exec = echo Wolfsburg: $(curl -s "wttr.in/Wolfsburg?0?T" | grep -Eo -e '-?[[:digit:]].*¬∞C.*')
interval = 60

[module/gravityfalls]
type = custom/script
exec = if ping -i 0.2 -c 1 -w 1 10.9.0.5 > /dev/null; then echo "gravityfalls"; else echo ""; fi
exec-if = ping -i 0.2 -c 1 -w 1 10.9.0.5
interval = 10
format-underline = #50fa7b

[module/ckc]
type = custom/script
exec = if ping -i 0.2 -c 1 -w 1 192.168.254.40 > /dev/null; then echo "ckc"; else echo ""; fi
exec-if = ping -i 0.2 -c 1 -w 1 192.168.254.40
interval = 10
format-underline = #50fa7b


